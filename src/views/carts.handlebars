<h2>Carrito de {{userName}}</h2>
<div class="row row-cols-1 row-cols-md-2 g-3">
    {{#each prods}}
    <div class="col-6 col-md-3">
        <div class="card">
            <div class="card-imgs">
                {{#each thumbnails}}
                <img src="{{this}}" class="img-fluid w-100" alt="{{title}}" />
                {{/each}}
            </div>
            <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text"><small>{{category}}</small></p>
                    <p class="card-text">{{description}}</p>
                    <div class="card-footer">
                        <p class="card-text"><strong>$ {{price}}</strong></p>
                        <form action="/api/carts/{{../cartId}}/products/{{id}}" method="post">
                            <label for="qty-{{code}}">Cantidad:</label>
                            <input type="number" id="qty-{{code}}" name="quantity" value="{{quantity}}">
                            <button type="submit" value="Submit">Agregar</button>
                        </form>
                    </div>
            </div>
        </div>
    </div>
    {{else}}
    <h2>No hay productos agrgados al carrito</h2>
    {{/each}}
</div>